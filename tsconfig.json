{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowJs": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build", /* Specify an output folder for all emitted files. */
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*",
    "src/*"
  ],
  "exclude": [
    "src/external/**/*",
    "node_modules",
    "**/*.spec.ts",
    ".temp",
    "archive/*"
  ],
  "ts-node": {
    "swc": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  }
}